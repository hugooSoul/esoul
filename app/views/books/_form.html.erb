<%= simple_form_for(@book, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :name, required: true, label: false, placeholder: "Name", input_html: { class: "form-controler"} %>
    <%= f.input :author, required: true, label: false, placeholder: "Author's name", input_html: { class: "form-controler"} %>
    <%= f.input :description, required: true, label: false, placeholder: "Description", input_html: { class: "form-controler", rows: 5} %>
    <%= f.input :price, required: true, label: false, placeholder: "Price", input_html: { class: "form-controler"} %>
    <div class="checkbox text-center">
    <p>Availability</p>
    <%= f.input :availability, required: false, label: false %>
  </div>

    <%= f.button :submit, class: "btn btn-primary btn-block" %>

<% end %>
